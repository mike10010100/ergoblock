{
  "name": "ergoblock",
  "version": "1.0.0",
  "description": "Temporary block and mute for Bluesky",
  "type": "module",
  "scripts": {
    "build": "node scripts/bundle.js",
    "dev": "node scripts/bundle.js --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "prepare": "husky install"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "typescript": "^5.3.0",
    "prettier": "^3.0.0",
    "vitest": "^1.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
